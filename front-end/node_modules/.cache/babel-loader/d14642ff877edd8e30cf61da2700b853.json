{"ast":null,"code":"import axios from \"axios\";\nimport config from \"../../axios-config\";\nimport postComment from \"@/components/posts/PostComment.vue\";\nexport default {\n  name: \"postBox\",\n  props: [\"post\"],\n  components: {\n    postComment\n  },\n\n  data() {\n    return {\n      formattedTimestamp: \"00/00/00 00:00\",\n      commentText: \"\" //TODO make sure it's not empty\n\n    };\n  },\n\n  methods: {\n    onAddComment() {\n      const commentObj = {\n        id: this.post.id,\n        text: this.commentText\n      };\n      axios.post(\"http://localhost:8000/api/post/createcomment\", commentObj, config).then(response => {\n        if (response.status == 201) {\n          console.log(response);\n          const commentInfo = {\n            postId: this.post.id,\n            comment: response.data.message\n          };\n          this.$emit(\"added-comment\", commentInfo);\n        }\n      }).catch(err => console.log(err));\n    }\n\n  },\n\n  created() {\n    if (this.post.timestamp != null && this.post.timestamp != \"\") {\n      const values = this.post.timestamp.split(\"T\");\n      const date = values[0].split(\"-\");\n      const time = values[1].split(\":\");\n      this.formattedTimestamp = `${date[2]}/${date[1]}/${date[0]} à ${time[0]}h${time[1]}`;\n    }\n  }\n\n};","map":{"version":3,"mappings":"AAmDA,OAAOA,KAAP,MAAkB,OAAlB;AACA,OAAOC,MAAP,MAAmB,oBAAnB;AACA,OAAOC,WAAP,MAAwB,oCAAxB;AAEA,eAAe;EACbC,IAAI,EAAE,SADO;EAEbC,KAAK,EAAE,CAAC,MAAD,CAFM;EAGbC,UAAU,EAAE;IACVH;EADU,CAHC;;EAMbI,IAAI,GAAG;IACL,OAAO;MACLC,kBAAkB,EAAE,gBADf;MAELC,WAAW,EAAE,EAFR,CAEY;;IAFZ,CAAP;EAID,CAXY;;EAYbC,OAAO,EAAE;IACPC,YAAY,GAAG;MACb,MAAMC,UAAS,GAAI;QACjBC,EAAE,EAAE,KAAKC,IAAL,CAAUD,EADG;QAEjBE,IAAI,EAAE,KAAKN;MAFM,CAAnB;MAKAR,KAAI,CACDa,IADH,CAEI,8CAFJ,EAGIF,UAHJ,EAIIV,MAJJ,EAMGc,IANH,CAMSC,QAAD,IAAc;QAClB,IAAIA,QAAQ,CAACC,MAAT,IAAmB,GAAvB,EAA4B;UAC1BC,OAAO,CAACC,GAAR,CAAYH,QAAZ;UACA,MAAMI,WAAU,GAAI;YAClBC,MAAM,EAAE,KAAKR,IAAL,CAAUD,EADA;YAElBU,OAAO,EAAEN,QAAQ,CA